            </ul>
        </footer>
    </div>


    </div>



    <script>
        const mode = document.getElementById("mode");

        mode.addEventListener("change", () => {
            if (mode.checked) {
                document.body.classList.add("dark");
            } else {
                document.body.classList.remove("dark");
            }
        });
    </script>





